<Window x:Class="KinectTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1000">
    <Grid>
        <Image x:Name="videoImage" HorizontalAlignment="Center" Height="540" VerticalAlignment="Top" Width="960" Source="/Resources/example.jpg" Stretch="Uniform"/>
        <Image x:Name="bodyImage" HorizontalAlignment="Center" Height="540" VerticalAlignment="Top" Width="960" Source="/Resources/example.jpg" Stretch="Uniform"/>
        <Button x:Name="initButton" Content="Connect" HorizontalAlignment="Left" Margin="280,588,0,0" VerticalAlignment="Top" Height="60" Width="80" Click="initButton_Click"/>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="450,588,0,0" VerticalAlignment="Top" Height="60" Width="80" Click="startButton_Click"/>
    </Grid>
</Window>
